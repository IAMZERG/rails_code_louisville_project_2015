<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1 class="heading">Log In</h1>
      <%= form_tag user_sessions_path do %>
        <%= label_tag :email, "Email Address" %>
        <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email Address" %>
        <br />

        <%= label_tag :password, "Password" %>
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: "Password" %>

        <br />

        <%= submit_tag "Log In", class: "btn btn-default" %>
        <br />
        <%= link_to "Forgot Password", new_password_reset_path %>

      <% end %>
    </div>
    <div class="col-md-6">
      <div class="vertical-rule">
        <h3>Enter your credentials here.</h3>
        <p>Keep calm and make something cool.</p>
      </div>
    </div>
  </div>
</div>
